<?xml version="1.0" encoding="utf-8"?>

//RelativeLayout starts here

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity">
    
     /**This is the ImageView section
    * When user or admin or any client see the ImageView to the front design on the app
    * It will help to work properly with nice relative design
    * Here layout_centerHorizontal is remained as true
    * It's drawable source is "@drawable/select"
    **/

    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    
     /**This is the Buttons section
    * When user or admin or any client see the ImageView to the front design on the app
    * It will help to work properly with nice relative design
    * Here layout_centerHorizontal is remained as  no
    *  
    **/

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_product_image"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Product Name..."
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="20dp"
        android:hint="Product Description..."
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Product Price..."
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/input_design"
        />
    
     /**This is the Buttons section
    * When user or admin or any client see the ImageView to the front design on the app
    * It will help to work properly with nice relative design
    * Here layout_centerHorizontal is remained as no
    * It's drawable source is  nothing"
    **/

    <Button
        android:id="@+id/add_new_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price"
        android:text="Add New Book"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:padding="17dp"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        />

//Ends relative layout

</RelativeLayout>
